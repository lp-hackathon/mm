<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add a new profile</h1>
  <%= simple_form_for @profile, url: profile_path do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :bio %>
    <%= f.input :location %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>
